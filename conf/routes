# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

# Crawler jobs
GET        /jobs/new            controllers.Application.newJob
POST        /jobs/new            controllers.Application.createNewJob
GET        /jobs/:id            controllers.Application.getJob(id: Long)
POST     /jobs/:id/delete            controllers.Application.deleteJob(id: Long)
POST     /jobs/:id            controllers.Application.updateJob(id: Long)
GET     /jobs/:id/edit            controllers.Application.editJob(id: Long)